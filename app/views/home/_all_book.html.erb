
<div class="container">
  <div class="row">
    <% @books.each do |book|%>
    <div class="col-3">
      <div class="book-container">
        <div class="book-image">
          <img src="https://static.vecteezy.com/system/resources/previews/004/319/237/original/opened-book-with-empty-pages-free-vector.jpg" alt="Book Cover">
        </div>
        <div class="book-info">      
          <h2 class="book-title"><%= link_to book.title, book_path(book.id) %></h2>
          <p class="book-author"> Author: <%=  book.author.name %></p>
          <p class="book-publisher">Publisher: <%=  book.author.name %></p>
          <%if user_signed_in?%>
            <button class="btn btn-primary">Borrow </button>
            <%= link_to "View", book_path(book.id), class:"btn btn-primary" %>
          <%else%>
            <%= link_to "View", book_path(book.id), class:"btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

